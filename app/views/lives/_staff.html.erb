    <% @live.users.each do |user| %>
      <div class="col s12 m7 center cards">
        <div class="card">
          <div class="card-image">
            <% if user.image? %>
              <%= image_tag user.image.url, class:"user-image", size:"200x200" %>
            <%else%>
              <%= image_tag "/assets/home_logo.JPG" %>
            <% end %>
            <span class="card-title"><%= user.nickname %> </span>
          </div>
          <div class="card-content">
            <p>Nameï¼š<%= user.nickname%></p>
            <p class="content-title">Tasks</p>
