<div class="container-input-user">
  <div class="container-input-user__box login-form">
    <%= form_with model: @user, url:"/login", local: true, class:"inputs login-form" do |f| %>
      <div class="row contents">
        <form class="col s12">

          <%# タイトル %>
          <p class="registration-title center">
            Login
          </p>

          <%# メッセージ %>
          <% if @error_message %>
            <div class="form-error red-text center">
              <%= @error_message %>
            </div>
            <% end %>

          <%# メールアドレス %>
          <div class="row email">
            <div class="input-field col s12">
              <%= f.label :email, "※E-mail", class:"red-text" %>
              <%= f.text_field :email, id:"email", type:"email", class:"validate", value: @email %>
              <span class="helper-text" data-error="There aren't any @ in your input." data-success="right"></span>
            </div>
          </div>

          <%# パスワード %>
          <div class="row password">
            <div class="input-field col s12">
              <%= f.text_field :password_digest, id:"password_digest", type:"password", class:"validate", value:@password %>
              <%= f.label :password_digest, "※Password", class:"red-text" %>
            </div>
          </div>

          <%# サブミットボタン %>
          <div class="row submit-button center">
            <button class="btn waves-effect waves-light login" type="submit" name="action">Login
              <i class="material-icons right">send</i>
            </button>
          </div>
          <div class="row submit-button center home">
            <a class="btn waves-effect waves-light" href="<%= root_path %>">Back to Home
              <i class="material-icons right">home</i>
            </a>
          </div>
        </form>
      </div>
    <% end %>
  </div>
</div>
