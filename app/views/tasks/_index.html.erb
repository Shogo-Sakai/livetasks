<div class="main-contents-container ">
  <div class="main-contents-container__task-wrapper z-depth-3">
    <div class="main-contents-container__task-wrapper__contents">
      <table class="highlight responsive-table centered">

        <%# タイトル %>
        <div class="table-title">
          <a class="center">Project Tasks</a>
          <%= link_to "Create New Task", "/tasks/new", class:"right"%>
        </div>

        <%# カラム %>
        <thead>
          <tr >
            <th class="center">Done</th>
            <th class="center">Content</th>
            <th class="center">Staff</th>
            <th class="center">Start Date</th>
            <th class="center">Finish Date</th>
            <th class="center">Memo</th>
            <th class="center">Edit</th>
            <th class="center">Delete</th>
          </tr>
        </thead>

        <%# 中身 %>
        <tbody>
          <% @tasks.each do |task|%>
          <tr >
            <td class="center">
              <% if task.finish == true %>
                <label>
                  <input name="session[finish]" type="hidden" value="false">
                  <input type="checkbox" class="filled-in" name="session[finish]" id="session_finish" value="true" data-remote="true" data-url="/toggle_finish/<%= task.id %>" data-method="POST" checked/>
                  <span></span>
                </label>
              <% else %>
                <label>
                  <input name="session[finish]" type="hidden" value="false">
                  <input type="checkbox" class="filled-in" name="session[finish]" id="session_finish" value="true" data-remote="true" data-url="/toggle_finish/<%= task.id %>" data-method="POST"/>
                  <span></span>
                </label>
              <% end %>
            </td>
            <td class="center">
              <%= link_to task.content, "/tasks/#{task.id}" %>
            </td>
            <td class="center">
              <%= task.user.nickname %>
            </td>
            <td class="center">
              <%= task.start_date %>
            </td>
            <td class="center">
              <%= task.finish_date %>
            </td>
            <td class="center">
              <%= task.memo %>
            </td>
            <td class="center">
              <a class="btn waves-effect waves-teal" href="/tasks/<%= task.id %>/edit">edit</a>
            </td>
            <td class="center">
              <a class="btn red waves-effect waves-teal" href="/tasks/<%= task.id %>" data-confirm="Are you sure?" data-method="DELETE">delete</a>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
